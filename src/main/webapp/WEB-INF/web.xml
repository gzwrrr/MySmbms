<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

    <!-- 用户登录过滤器 -->
    <filter>
        <filter-name>SysFilter</filter-name>
        <filter-class>com.gzw.filter.SysFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SysFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>
    
    <!-- 字符编码过滤器 -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.gzw.filter.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- 登录页面 -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.gzw.servlet.user.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>

    <!-- 退出页面 -->
    <servlet>
        <servlet-name>LoginOutServlet</servlet-name>
        <servlet-class>com.gzw.servlet.user.LoginOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginOutServlet</servlet-name>
        <url-pattern>/jsp/logout.do</url-pattern>
    </servlet-mapping>

    <!-- 首页 -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>


    <!-- 将请求发送给UserServlet -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.gzw.servlet.user.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/jsp/user.do</url-pattern>
    </servlet-mapping>

    <!-- 将请求发送给BillServlet -->
    <servlet>
        <servlet-name>BillServlet</servlet-name>
        <servlet-class>com.gzw.servlet.bill.BillServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BillServlet</servlet-name>
        <url-pattern>/jsp/bill.do</url-pattern>
    </servlet-mapping>

    <!-- 将请求发送给ProviderServlet -->
    <servlet>
        <servlet-name>ProviderServlet</servlet-name>
        <servlet-class>com.gzw.servlet.provider.ProviderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProviderServlet</servlet-name>
        <url-pattern>/jsp/provider.do</url-pattern>
    </servlet-mapping>

    <!-- 注册 -->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.gzw.servlet.user.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register.do</url-pattern>
    </servlet-mapping>

    <!--  饮料区 -->
    <servlet>
        <servlet-name>drink</servlet-name>
        <servlet-class>com.gzw.servlet.goodServlet.DrinkServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>drink</servlet-name>
        <url-pattern>/jsp/drink.do</url-pattern>
    </servlet-mapping>

    <!--  日用品区 -->
    <servlet>
        <servlet-name>daily</servlet-name>
        <servlet-class>com.gzw.servlet.goodServlet.DailyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>daily</servlet-name>
        <url-pattern>/jsp/daily.do</url-pattern>
    </servlet-mapping>

    <!--  蔬菜水果区 -->
    <servlet>
        <servlet-name>vegetable</servlet-name>
        <servlet-class>com.gzw.servlet.goodServlet.VegetableServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>vegetable</servlet-name>
        <url-pattern>/jsp/vegetable.do</url-pattern>
    </servlet-mapping>

    <!-- 购买 -->
    <servlet>
        <servlet-name>bought</servlet-name>
        <servlet-class>com.gzw.servlet.goodOfUser.BoughtServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bought</servlet-name>
        <url-pattern>/jsp/bought.do</url-pattern>
    </servlet-mapping>

    <!-- 购物车 -->
    <servlet>
        <servlet-name>shoppingCart</servlet-name>
        <servlet-class>com.gzw.servlet.goodOfUser.ShoppingCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    <servlet-name>shoppingCart</servlet-name>
    <url-pattern>/jsp/shoppingCart.do</url-pattern>
    </servlet-mapping>


    <!-- session过期,三十分钟 -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
